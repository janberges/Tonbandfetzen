#!/bin/bash

infile=${1:--}
outfile=${2:--}

test "$infile" = - && infile=/dev/stdin
test "$outfile" = - && outfile=/dev/shm/tmp.wav

case "${infile##*.}" in
aiff | aif | AIFF | AIF )
    aiff2riff "$infile" "$outfile" && xdg-open "$outfile";;
wave | wav | WAVE | WAV | mp3 | MP3 )
    xdg-open "$infile";;
*)
    guitar "$infile" | mel > "$outfile" && xdg-open "$outfile";;
esac
